<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bytedesk_chat_content_date_style">
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--********************* Dialog *********************-->

    <style name="QMUI.BaseDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:buttonStyle">@style/Button.Compat</item>
    </style>


    <style name="QMUI.Dialog" parent="QMUI.BaseDialog">
        <item name="android:textColor">?attr/qmui_skin_support_dialog_title_text_color</item>
        <item name="android:backgroundDimAmount">?attr/qmui_dialog_background_dim_amount</item>
        <item name="android:windowBackground">@color/qmui_config_color_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item><!-- 在中间弹框、背后有遮罩的效果 -->
    </style>

    <style name="QMUI.TipDialog" parent="QMUI.BaseDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="QMUI.BottomSheet" parent="QMUI.BaseDialog">
        <item name="android:backgroundDimAmount">?attr/qmui_bottom_sheet_background_dim_amount
        </item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="QMUI.Dialog.Title">
        <item name="android:textColor">?attr/qmui_skin_support_dialog_title_text_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingLeft">?attr/qmui_dialog_padding_horizontal</item>
        <item name="android:paddingRight">?attr/qmui_dialog_padding_horizontal</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="qmui_paddingBottomWhenNotContent">27dp</item>
    </style>

    <style name="QMUI.Dialog.ActionContainer">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="qmui_dialog_action_container_justify_content">end</item>
        <item name="qmui_dialog_action_height">36dp</item>
        <item name="qmui_dialog_action_space">8dp</item>
    </style>

    <style name="QMUI.Dialog.Action">
        <item name="android:textColor">?attr/qmui_config_color_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:background">?attr/qmui_skin_support_dialog_action_bg</item>
        <item name="qmui_dialog_action_button_padding_horizontal">12dp</item>
        <item name="qmui_dialog_action_icon_space">6dp</item>
        <item name="qmui_dialog_positive_action_text_color">
            ?attr/qmui_skin_support_dialog_positive_action_text_color
        </item>
        <item name="qmui_dialog_negative_action_text_color">
            ?attr/qmui_skin_support_dialog_negative_action_text_color
        </item>
    </style>

    <style name="QMUI.Dialog.MessageContent">
        <item name="android:textColor">?attr/qmui_skin_support_dialog_message_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingLeft">?attr/qmui_dialog_padding_horizontal</item>
        <item name="android:paddingRight">?attr/qmui_dialog_padding_horizontal</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="qmui_paddingTopWhenNotTitle">27dp</item>
    </style>

    <style name="QMUI.Dialog.EditContent">
        <item name="android:textColor">?attr/qmui_skin_support_dialog_edit_text_color</item>
        <item name="android:textColorHint">?attr/qmui_skin_support_dialog_edit_text_hint_color
        </item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="qmui_paddingTopWhenNotTitle">7dp</item>
    </style>

    <style name="QMUI.Dialog.MenuContainer">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="qmui_dialog_menu_container_single_padding_vertical">0dp</item>
        <item name="qmui_dialog_menu_container_padding_top_when_title_exist">14dp</item>
        <item name="qmui_dialog_menu_container_padding_bottom_when_action_exist">27dp</item>
        <item name="qmui_dialog_menu_item_height">48dp</item>
    </style>

    <style name="QMUI.Dialog.MenuItem">
        <item name="android:background">?attr/qmui_skin_support_s_dialog_menu_item_bg</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">?attr/qmui_dialog_padding_horizontal</item>
        <item name="android:paddingRight">?attr/qmui_dialog_padding_horizontal</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/qmui_skin_support_dialog_menu_item_text_color</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="qmui_dialog_menu_item_mark_drawable">
            ?attr/qmui_skin_support_dialog_mark_drawable
        </item>
        <item name="qmui_dialog_menu_item_check_drawable">
            ?attr/qmui_skin_support_s_dialog_check_drawable
        </item>
        <item name="qmui_dialog_menu_item_check_mark_margin_hor">6dp</item>
    </style>

    <style name="QMUI.BottomSheet.Title">
        <item name="android:textColor">?attr/qmui_skin_support_bottom_sheet_title_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingLeft">?attr/qmui_bottom_sheet_padding_hor</item>
        <item name="android:paddingRight">?attr/qmui_bottom_sheet_padding_hor</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="QMUI.BottomSheet.Cancel">
        <item name="android:textColor">?attr/qmui_skin_support_bottom_sheet_cancel_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">?attr/qmui_bottom_sheet_padding_hor</item>
        <item name="android:paddingRight">?attr/qmui_bottom_sheet_padding_hor</item>
    </style>

    <style name="QMUI.BottomSheet.List" />

    <style name="QMUI.BottomSheet.List.Text">
        <item name="android:textColor">?attr/qmui_skin_support_bottom_sheet_list_item_text_color
        </item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="QMUI.BottomSheet.Grid" />

    <style name="QMUI.BottomSheet.Grid.Text">
        <item name="android:textColor">?attr/qmui_skin_support_bottom_sheet_grid_item_text_color
        </item>
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>