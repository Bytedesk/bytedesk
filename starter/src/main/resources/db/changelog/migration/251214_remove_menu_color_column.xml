<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="251214-remove-menu-color-column" author="githubcopilot">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="bytedesk_core_menu" />
            <columnExists tableName="bytedesk_core_menu" columnName="color" />
        </preConditions>
        <comment>
            Remove the deprecated color column from bytedesk_core_menu when it still exists.
        </comment>
        <dropColumn tableName="bytedesk_core_menu" columnName="color" />
        <rollback>
            <addColumn tableName="bytedesk_core_menu">
                <column name="menu_color" type="VARCHAR(32)" defaultValue="blue">
                    <constraints nullable="true" />
                </column>
            </addColumn>
        </rollback>
    </changeSet>

</databaseChangeLog>
