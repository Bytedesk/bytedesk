<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Add visitor_thread_uid back to bytedesk_ticket for linking internal ticket to the originating customer-service thread -->

    <changeSet id="260121-add-bytedesk-ticket-visitor-thread-uid" author="copilot">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <and>
                <tableExists tableName="bytedesk_ticket" />
                <not>
                    <columnExists tableName="bytedesk_ticket" columnName="visitor_thread_uid" />
                </not>
            </and>
        </preConditions>
        <addColumn tableName="bytedesk_ticket">
            <column name="visitor_thread_uid" type="varchar(64)" />
        </addColumn>
    </changeSet>

    <changeSet id="260121-add-idx-ticket-visitor-thread-uid" author="copilot">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <and>
                <tableExists tableName="bytedesk_ticket" />
                <columnExists tableName="bytedesk_ticket" columnName="visitor_thread_uid" />
                <not>
                    <indexExists tableName="bytedesk_ticket" indexName="idx_ticket_visitor_thread_uid" />
                </not>
            </and>
        </preConditions>
        <createIndex tableName="bytedesk_ticket" indexName="idx_ticket_visitor_thread_uid">
            <column name="visitor_thread_uid" />
        </createIndex>
    </changeSet>

</databaseChangeLog>
