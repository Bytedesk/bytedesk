<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="251120-add-queue-settings-batch-window" author="githubcopilot">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="bytedesk_service_queue_settings" />
            <not>
                <columnExists tableName="bytedesk_service_queue_settings" columnName="queue_notice_batch_window_ms" />
            </not>
        </preConditions>
        <comment>Add queue_notice_batch_window_ms so each agent can tune queue notice cadence.</comment>
        <addColumn tableName="bytedesk_service_queue_settings">
            <column name="queue_notice_batch_window_ms" type="INT" defaultValueNumeric="2000">
                <constraints nullable="false" />
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="bytedesk_service_queue_settings" columnName="queue_notice_batch_window_ms" />
        </rollback>
    </changeSet>

    <changeSet id="251120-backfill-queue-settings-batch-window" author="githubcopilot">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="bytedesk_service_queue_settings" columnName="queue_notice_batch_window_ms" />
        </preConditions>
        <comment>Ensure all existing rows honour the default 2000 ms window.</comment>
        <sql>
            UPDATE bytedesk_service_queue_settings
            SET queue_notice_batch_window_ms = 2000
            WHERE queue_notice_batch_window_ms IS NULL;
        </sql>
    </changeSet>

</databaseChangeLog>
