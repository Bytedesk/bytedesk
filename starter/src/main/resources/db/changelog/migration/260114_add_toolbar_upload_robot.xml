<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- 添加 upload_robot 字段：机器人接待时是否显示上传按钮 -->
    <changeSet id="260114-add-toolbar-upload-robot" author="jackning">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="bytedesk_kbase_service_settings" />
            <not>
                <columnExists tableName="bytedesk_kbase_service_settings" columnName="upload_robot" />
            </not>
        </preConditions>
        <comment>Add upload_robot field to control whether upload button is shown when handled by robot.</comment>
        <addColumn tableName="bytedesk_kbase_service_settings">
            <column name="upload_robot" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="true" />
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="bytedesk_kbase_service_settings" columnName="upload_robot" />
        </rollback>
    </changeSet>

    <!-- 回填默认值（对于现有数据） -->
    <changeSet id="260114-backfill-toolbar-upload-robot" author="jackning">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="bytedesk_kbase_service_settings" />
            <columnExists tableName="bytedesk_kbase_service_settings" columnName="upload_robot" />
        </preConditions>
        <comment>Backfill default value for existing rows.</comment>
        <sql>
            UPDATE bytedesk_kbase_service_settings
            SET upload_robot = true
            WHERE upload_robot IS NULL;
        </sql>
    </changeSet>

</databaseChangeLog>
