<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="260112-alter-browse-user-agent-length" author="jackning">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <tableExists tableName="bytedesk_service_browse" />
            <columnExists tableName="bytedesk_service_browse" columnName="user_agent" />
        </preConditions>

        <modifyDataType tableName="bytedesk_service_browse" columnName="user_agent" newDataType="VARCHAR(1024)" />

        <rollback>
            <modifyDataType tableName="bytedesk_service_browse" columnName="user_agent" newDataType="VARCHAR(255)" />
        </rollback>
    </changeSet>

</databaseChangeLog>
