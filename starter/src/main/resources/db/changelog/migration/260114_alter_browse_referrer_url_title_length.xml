<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="260114-alter-browse-referrer-url-title-length" author="jackning">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <tableExists tableName="bytedesk_service_browse" />
            <columnExists tableName="bytedesk_service_browse" columnName="referrer" />
            <columnExists tableName="bytedesk_service_browse" columnName="url" />
            <columnExists tableName="bytedesk_service_browse" columnName="title" />
        </preConditions>

        <modifyDataType tableName="bytedesk_service_browse" columnName="referrer" newDataType="VARCHAR(1024)" />
        <modifyDataType tableName="bytedesk_service_browse" columnName="url" newDataType="VARCHAR(1024)" />
        <modifyDataType tableName="bytedesk_service_browse" columnName="title" newDataType="VARCHAR(512)" />

        <rollback>
            <modifyDataType tableName="bytedesk_service_browse" columnName="referrer" newDataType="VARCHAR(255)" />
            <modifyDataType tableName="bytedesk_service_browse" columnName="url" newDataType="VARCHAR(255)" />
            <modifyDataType tableName="bytedesk_service_browse" columnName="title" newDataType="VARCHAR(255)" />
        </rollback>
    </changeSet>

</databaseChangeLog>
