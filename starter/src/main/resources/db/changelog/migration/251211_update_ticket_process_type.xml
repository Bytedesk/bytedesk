<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="251211-ticket-process-type" author="githubcopilot">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="bytedesk_ticket_process" />
            <not>
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*) FROM bytedesk_ticket_process WHERE process_type = 'TICKET'
                </sqlCheck>
            </not>
        </preConditions>
        <comment>
            Align legacy ticket processes with the new internal/external enum by converting the old TICKET type to TICKET_INTERNAL.
        </comment>
        <update tableName="bytedesk_ticket_process">
            <column name="process_type" value="TICKET_INTERNAL" />
            <where>process_type = 'TICKET'</where>
        </update>
    </changeSet>

</databaseChangeLog>
