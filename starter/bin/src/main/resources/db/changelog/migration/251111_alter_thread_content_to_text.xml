<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- 合并为单一变更：在支持 TEXT 的数据库（如 MySQL、MariaDB、PostgreSQL）统一将 content 修改为 TEXT -->
    <changeSet id="251111-alter-thread-content-to-text" author="jackning">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <columnExists tableName="bytedesk_core_thread" columnName="content" />
        </preConditions>
        <modifyDataType tableName="bytedesk_core_thread" columnName="content" newDataType="TEXT" />
        <rollback>
            <modifyDataType tableName="bytedesk_core_thread" columnName="content" newDataType="VARCHAR(255)" />
        </rollback>
    </changeSet>

</databaseChangeLog>
