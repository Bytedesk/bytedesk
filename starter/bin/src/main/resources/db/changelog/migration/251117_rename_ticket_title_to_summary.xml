<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="251117-rename-ticket-title-to-summary" author="githubcopilot">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="bytedesk_ticket" />
                <columnExists tableName="bytedesk_ticket" columnName="title" />
                <not>
                    <columnExists tableName="bytedesk_ticket" columnName="summary" />
                </not>
            </and>
        </preConditions>
        <comment>Rename column title to summary in bytedesk_ticket table to align with API rename</comment>
        <renameColumn
            tableName="bytedesk_ticket"
            oldColumnName="title"
            newColumnName="summary"
            columnDataType="varchar(255)" />
        <rollback>
            <renameColumn
                tableName="bytedesk_ticket"
                oldColumnName="summary"
                newColumnName="title"
                columnDataType="varchar(255)" />
        </rollback>
    </changeSet>

</databaseChangeLog>
